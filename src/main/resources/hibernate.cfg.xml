<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- ============================== -->
        <!--  Database Connection Settings  -->
        <!-- ============================== -->

        <!-- Driver JDBC para MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!-- URL da base de dados -->
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/equipa2?createDatabaseIfNotExist=true&amp;useSSL=false&amp;serverTimezone=UTC
        </property>

        <!-- Credenciais de acesso -->
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">2001</property>

        <!-- ============================== -->
        <!--  Hibernate Behavior Settings   -->
        <!-- ============================== -->

        <!-- Controla a criação/atualização automática do esquema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mostra as queries SQL na consola -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Dialeto SQL para o MySQL 8 -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- ============================== -->
        <!--  Mapped Entity Classes         -->
        <!-- ============================== -->

        <!-- Registo das classes anotadas (entidades JPA) -->
        <mapping class="upt.lp.equipa2.Evento"/>
        <mapping class="upt.lp.equipa2.Utilizador"/>

    </session-factory>
</hibernate-configuration>
